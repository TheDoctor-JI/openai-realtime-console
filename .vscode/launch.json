{
    "configurations": [
        {
            "name": "Debug Chrome React Frontend port 3000",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--preserve-symlinks"
            ]
        },
        {
            "name": "Node Launch via NPM",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [ 
                "start",
                "debug",
                "--preserve-symlinks"
            ],
        },
